<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head'); %>
    </head> 
    <body>
        <%- include('./partials/navbar') %>
        <header class="py-5">
            <div class="container">
                <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
                    <div class="m-4 m-lg-5">
                        <h1 class="display-4">Hello Everyone!</h1>
                        <p class="lead">My name is Fabien Louce Kerdely, and welcome on my website</p>
                        <a class="btn btn-primary btn-lg" href="#">see more...</a>
                    </div>
                </div>
            </div>
        </header>

        
        <div class="container">
            <h4 class="display-6"><%= theTitle %> <span class="badge bg-secondary"><%= total %></span></h4> 
            <br>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr class="small">
                        <th scope="col">No</th>
                        <th scope="col">name</th>
                        <th scope="col">capital</th>
                        <th scope="col">languages</th>
                        <th scope="col">population</th>
                        <th scope="col">currency</th>
                        <th scope="col">Flag</th>
                      </tr>
                </thead>
                <tbody style="font-family:'Courier New', Courier, monospace">
                    <% mydata.forEach((country) =>{ %>
                        <tr>
                        <td><%= numbers++ %></td>
                        <td><%= country.name %></td>
                        <td><%= country.capital %></td>
                        <td><%= country.languages %></td>
                        <td><%= country.population %></td>
                        <td><%= country.currency %></td>
                        <td> -- </td>
                        </tr>
                    <% } )%>
                </tbody>
              </table>
     
        </div>


    </body>
</html>